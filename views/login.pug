extends layouts/frontend

block content
    .flex.flex-col.justify-center.items-center.bg-gray-800.mt-28.m-auto.rounded-xl.p-4(class='w-1/3')
        h1.text-white.font-bold.text-5xl.my-4 Login
        form.ui.large.form(method="post", action="/login")
            +field('email', 'email', 'your.email@address.tld')
            +field('password', 'password', 'Password')
            button.w-full.my-5.py-2.bg-teal-500.select-none.font-bold.rounded.text-white(type="submit" class='active:bg-teal-600 hover:bg-teal-400') Login
        if  errors
            each error in errors
                .border.border-red-500.rounded-lg.p-2(class='w-2/3 min-h-[50px]')
                    h1.text-md.text-red-500= error

